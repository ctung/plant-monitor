DROP TABLE IF EXISTS `data`;
		
CREATE TABLE `data` (
  `id` INTEGER NULL AUTO_INCREMENT DEFAULT NULL,
  `pid` INTEGER NULL DEFAULT NULL,
  `timestamp` TIMESTAMP NULL DEFAULT NULL,
  `light` INTEGER NULL DEFAULT NULL,
  `moisture` INTEGER NULL DEFAULT NULL,
  `temp` FLOAT NULL DEFAULT NULL,
  `water` TINYINT NULL DEFAULT NULL,
  PRIMARY KEY (`id`),
  UNIQUE KEY (`pid`,`timestamp`)
);

-- ---
-- Table 'plant'
-- 
-- ---

DROP TABLE IF EXISTS `plant`;

CREATE TABLE `plant` (
  `pid` INTEGER NULL AUTO_INCREMENT DEFAULT NULL,
  `name` VARCHAR(32) NULL DEFAULT NULL,
  PRIMARY KEY (`pid`),
  UNIQUE KEY (`name`)
);
